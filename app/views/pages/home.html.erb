<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <h1>DEWAYS</h1>
      <p>Location de voiture entre particuliers</p>
      <hr>
       <%= form_tag(cars_path, :method => "get", class: "navbar-form", id: "search-form") do %>
          <div class="input-append">
            <%= text_field_tag :search, params[:search], class: "span2", placeholder: "City?" %>
            <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
                 of using a Rails form helper -->
            <button class="btn btn-primary" type="submit">Search<i class="icon-search"></i></button>
          </div>
        <% end %>

    </div>
  </div>
</div>


