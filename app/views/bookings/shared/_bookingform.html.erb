<%= simple_form_for [@car, @booking] do |f|%>
  <div class="box-booking-container">
    <h3>Date de début</h3>
    <div class="box-booking-date">
      <%= f.input :checkin_date, :input_html => { class: "datepicker", data: {provide: "datepicker"}}, label: false %>
    </div>
    <h3>Date de fin</h3>
    <div class="box-booking-date">
      <%= f.input :checkout_date, :input_html => { class: "datepicker", data: {provide: "datepicker"}}, label: false %>
    </div>
    <h3>Kilométrage estimé</h3>
    <div class="box-booking-kilometer">
      <%= f.input :distance, label: false %>
    </div>
  </div>

  <div class="box-price-container">
    <div class="box-price-price text-center">
      <span><%= @car.daily_rate.to_i %>€ </span> / jour
    </div>
  </div>
  <div class="box-price-booking-btn text-center">
    <%= f.button :submit, "Send a request", class:"btn btn-danger" %>
  </div>
<% end %>

<% content_for :after_js do %>
  <!-- DATEPICKER -->
  <div class="row">
    <div class='col-md-5'>
      <div class="form-group">
        <div class='input-group date' id='datetimepicker1'>
          <input type='text' class="form-control" />
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class='col-md-5'>
      <div class="form-group">
        <div class='input-group date' id='datetimepicker2'>
          <input type='text' class="form-control" />
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div>
    <input type="submit" class="btn btn-primary">
  </div>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker1').datetimepicker();
      $('#datetimepicker2').datetimepicker({
        useCurrent: false
      });
      $("#datetimepicker1").on("dp.change", function (e) {
        $('#datetimepicker2').data("DateTimePicker").minDate(e.date);
      });
      $("#datetimepicker2").on("dp.change", function (e) {
        $('#datetimepicker1').data("DateTimePicker").maxDate(e.date);
      });
    });
  </script>
  <!-- END DATEPICKER -->
<% end %>
