<div class="video-banner">

  <div class="container-liquid wrapper">

    <div class="col-xs-12 video-banner-content text-centered">
      <h1>Location de voiture entre particuliers</h1>
      <p class="text-centered">Cherchez parmi plus de 26 000 voitures et utilitaires de particuliers Ã  louer dans toute la France</p>






      <%= form_tag(cars_path, :method => "get", class: "navbar-form", id: "search-form") do %>
          <div class="input-append">
            <div class="col-xs-12 text-center">
              <%= text_field_tag :place, params[:place], type:"address", class: "form-control form-round", placeholder: "ex: Paris" %>
              <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
                   of using a Rails form helper -->
              <button class="btn video-banner-btn margin-left" type="submit">Rechercher</button>
            </div>
          </div>
      <% end %>
    </div>

  </div>

  <div class="video-banner-container">
    <video autoplay muted poster="" id="bgvid" loop class="video-banner-video-fullscreen">
      <source src='<%= video_path("bg_video.mp4") %>' type="video/mp4">
      <source src='<%= video_path("bg_video.mp4") %>' type="video/webm">
    </video>
  </div>

  <div class="video-banner-gradient"></div>
</div>


